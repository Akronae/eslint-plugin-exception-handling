{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
    ],
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist",
    "allowJs": false,
    "jsx": "preserve",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}